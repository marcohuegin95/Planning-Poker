<?xml version="1.0" encoding='UTF-8'?>
<routes>

    <route>
        <url>/</url>
        <controller>UserController</controller>
        <action>index</action>
    </route>

    <route>
        <url>/register</url>
        <controller>UserController</controller>
        <action>register</action>
        <filter>InputFilter</filter>
    </route>
  
    <route>
        <url>/login</url>
        <controller>UserController</controller>
        <action>login</action>
        <filter>InputFilter</filter>
    </route>

    <route>
        <url>/logout</url>
        <controller>UserController</controller>
        <action>logout</action>
    </route>

    <route>
        <url>/dashboard</url>
        <controller>PokerController</controller>
        <action>index</action>
        <filter>LoginFilter</filter>
    </route>

    <route>
        <url>/newgame</url>
        <controller>PokerController</controller>
        <action>newGamePage</action>
        <filter>LoginFilter</filter>
    </route>

    <route>
        <url>/savenewgame</url>
        <controller>PokerController</controller>
        <action>saveGame</action>
        <filter>LoginFilter</filter>
        <filter>InputFilter</filter>
    </route>

    <route>
        <url>/savepoints</url>
        <controller>PokerController</controller>
        <action>saveVoteResultForCurrentUser</action>
        <filter>LoginFilter</filter>
    </route>

    <route>
        <url>/game</url>
        <controller>PokerController</controller>
        <action>gamePage</action>
        <filter>LoginFilter</filter>
    </route>

    <route>
        <url>/loadpoints</url>
        <controller>PokerController</controller>
        <action>loadPoints</action>
        <filter>LoginFilter</filter>
    </route>

    <route>
        <url>/loadpointsforcurrentuser</url>
        <controller>PokerController</controller>
        <action>loadPointsForCurrentUser</action>
        <filter>LoginFilter</filter>
    </route>

</routes>